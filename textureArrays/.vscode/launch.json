	"version": "0.2.0",
	"configurations": [
		{
			"name": "HashLink (launch)",
			"request": "launch",
			"type": "hl",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "compile_hl"
		},
		{
			"name": "HashLink (attach)",
			"request": "attach",
			"port": 6112,
			"type": "hl",
			"cwd": "${workspaceFolder}",
			"preLaunchTask": "compile_hl"
		},
		{
			"type": "chrome",
			"request": "launch",
			"name": "Chrome WebGL",
			"url": "file://${workspaceFolder}/index.html",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": "compile_js"
		},
	]
}