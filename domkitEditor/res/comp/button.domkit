<css>
button {
    background : #333;
    padding : 5 20;
	cursor : button;
    text {
        color : @textColor;
    }
    &.disabled {
		cursor : default;
        text {
            color : #555;
        }
		background : #222;
    }
}
</css>

<params>
{
    text : "Hello World",
    classes : ["disabled"],
}
</params>

<button(text:String)>
    <text text={text}/>
</button>